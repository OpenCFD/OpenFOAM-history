#!/bin/csh

if ( $#argv != 1 ) then
    echo "Usage: createScalar <scalarName>"
    exit 1
endif

set file = $1.cfg
if ( -e $file ) then
	echo "Removing existing file $file"
 	rm $file
endif

echo "Creating file $file"
touch $file
echo $1 >> $file
echo '{' >> $file
echo '    type                scalar;' >> $file
echo '    description         "'$1'";'  >> $file
echo '    iconURL             "/FoamX/icons/small/maths/'$1'.gif";'  >> $file
echo '}' >> $file

