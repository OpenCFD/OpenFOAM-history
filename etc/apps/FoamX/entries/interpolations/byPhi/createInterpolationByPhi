#!/bin/sh

writeFile () {
cat <<EOF
/*---------------------------------------------------------------------------*\\
| =========                 |                                                 |
| \\\\      /  F ield         | OpenFOAM: The Open Source CFD Toolbox           |
|  \\\\    /   O peration     | Version:  1.4.1                                 |
|   \\\\  /    A nd           | Web:      http://www.openfoam.org               |
|    \\\\/     M anipulation  |                                                 |
\\*---------------------------------------------------------------------------*/

$1
{
    type            $1;
    entries
    {
        interpolateField
        {
            type         word;
            default      phi;
            editable     0;
        }
    }
}
EOF
}

if [ $# != 1 ] ; then
    echo "Usage: $0 <interpolationScheme>"
    exit 1
fi

file=$1.cfg
if [ -e $file ] ; then
	echo "Removing existing file $file"
 	rm $file
fi

echo "Creating file $file"
writeFile $1 > $file
