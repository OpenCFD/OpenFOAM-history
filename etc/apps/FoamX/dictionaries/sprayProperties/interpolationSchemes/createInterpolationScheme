#!/bin/csh

if ( $#argv != 1 ) then
    echo "Usage: createScalar01 <dimensionedScalarName>"
    exit 1
endif

set file = $1.cfg
if ( -e $file ) then
	echo "Removing existing file $file"
 	rm $file
endif

echo "Creating file $file"
touch $file
echo $1 >> $file
echo '{' >> $file
echo '    type                word;' >> $file
echo '    displayName         "'$1'";'  >> $file
echo '    description         "'$1' interpolation scheme";'  >> $file
echo '    iconURL             "/FoamX/icons/small/maths/'$1'.gif";'  >> $file
echo '    valueList'  >> $file
echo '    ('  >> $file
echo '        cell'  >> $file
echo '        cellPoint'  >> $file
echo '        cellPointFace'  >> $file
echo '    );'  >> $file
echo '}' >> $file

