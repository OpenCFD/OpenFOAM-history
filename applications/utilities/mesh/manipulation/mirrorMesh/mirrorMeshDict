FoamFile
{
    version  1.0;
    format   ascii;

    root     "";
    case     "";
    instance "system";
    local    "";

    class    dictionary;
    object   mirrorMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

planeType                       pointAndNormal;

pointAndNormalDict
{
    basePoint                   (0 0 0);
    normalVector                (0 1 0);
}

planeTolerance                  1e-3;


