#!/bin/sh
cd ${0%/*} || exit 1    # Run from this directory
set -x

if [ -z "$CGAL_ARCH_PATH" ]
then
    export COMPILE_FLAGS="-DNO_CGAL"
else
    wmake PolyhedronReader
    export COMPILE_FLAGS='-IPolyhedronReader'
    export LINK_FLAGS='-lgmp -lCGAL -lPolyhedronReader'
fi
wmake

# ----------------------------------------------------------------- end-of-file
