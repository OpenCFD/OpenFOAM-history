FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
    volVectorFieldValue U ( 0 0 0 )
);

regions
(
    boxToCell
    {
        //box ( -1 -0.5 0 ) ( -0.5 0.5 2 );
        box ( -1 -0.5 1.5 ) ( 3 0.5 2 );
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }
 );


