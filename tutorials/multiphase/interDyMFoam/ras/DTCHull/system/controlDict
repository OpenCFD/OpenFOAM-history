FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     interDyMFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          0.0001;

writeControl    adjustableRunTime;

writeInterval   5;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           25;
maxAlphaCo      15;
maxDeltaT       0.01;

functions
{
    forces
    {
        type forces;
        functionObjectLibs ( "libforces.so" );
        patches (hull);
        rhoInf  998.8;
        rhoName rho;
        UName   U;
        log     on;
        outputControl   timeStep;
        outputInterval  1;
        CofR (2.929541 0 0.2);
    }
}


