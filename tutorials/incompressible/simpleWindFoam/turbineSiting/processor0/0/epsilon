FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.01;

boundaryField
{
    outlet
    {
        type            zeroGradient;
    }
    sides
    {
        type            slip;
    }
    inlet
    {
        type            atmBoundaryLayerInletEpsilon;
        Ustar           0.82;
        z               ( 0 0 1 );
        z0              0.1;
        zGround         935;
        value           uniform 0.01;
    }
    ground
    {
        type            zeroGradient;
    }
    top
    {
        type            slip;
    }
    procBoundary0to1
    {
        type            processor;
        value           uniform 0.01;
    }
}


