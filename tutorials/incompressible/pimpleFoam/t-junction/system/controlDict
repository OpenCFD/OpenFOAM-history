FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1;

deltaT          0.001;

writeControl    adjustableRunTime;

writeInterval   0.1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           5;

functions
{
    probes
    {
        type        probes;
        name        probes;
        functionObjectLibs ( "libsampling.so" );
        probeLocations
        (
            ( 1e-06 0 0.01 )
            ( 0.21 -0.20999 0.01 )
            ( 0.21 0.20999 0.01 )
            ( 0.21 0 0.01 )
        );
        fields ( p U );
    }
}


