solvers
{
    D GAMG
    {
        tolerance        1e-06;
        relTol           0.9;

        smoother         GaussSeidel;

        cacheAgglomeration true;

        nCellsInCoarsestLevel 20;

        agglomerator     faceAreaPair;
        mergeLevels      1;
    };

    T GAMG
    {
        tolerance        1e-06;
        relTol           0.9;

        smoother         GaussSeidel;

        cacheAgglomeration true;

        nCellsInCoarsestLevel 20;

        agglomerator     faceAreaPair;
        mergeLevels      1;
    };
}

stressAnalysis
{
    compactNormalStress yes;
    nCorrectors     1;
