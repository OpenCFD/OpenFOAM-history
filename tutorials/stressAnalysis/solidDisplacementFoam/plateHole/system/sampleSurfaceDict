FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleSurfaceDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

surfaceFormat   vtk;

surfaces
(
    constantPlane
    {
        type plane;
        name plate;
        basePoint ( 0 0 0.25 );
        normalVector ( 0 0 1 );
    }
);

fields          ( sigmaEq );


