FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 1 -1 -2 0 0 0 0 ];

internalField   uniform 101325;

boundaryField
{
    floor
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    ceiling
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    inlet
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    outlet
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    fixedWalls
    {
        type            empty;
    }
    "baffle1Wall.*"
    {
        type           calculated;
    }
}


// ************************************************************************* //
