FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      mut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    frontAndBack
    {
        type            mutUWallFunction;
        value           uniform 0;
    }
    topAndBottom
    {
        type            mutUWallFunction;
        value           uniform 0;
    }
    hot
    {
        type            mutUWallFunction;
        value           uniform 0;
    }
    cold
    {
        type            mutUWallFunction;
        value           uniform 0;
    }
}


