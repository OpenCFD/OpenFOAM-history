        sourceInfo
        {
            box (0  0 -2)(41 41 0);
        }
    }

     {
        name    floor;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
           set floor;
        }
    }

    //air
    {
        name    solid;
        type    cellSet;
        action  invert;
    }

    {
        name    solid;
        type    cellSet;
        action  delete;
        source  cellToCell;
        sourceInfo
        {
           set floor;
        }
    }

    {
        name    air;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set solid;           // name of cellSet
        }
    }

    {
