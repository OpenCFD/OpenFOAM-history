setFormat       raw;

sets
(
    line_centreProfile
    {
        type    uniform;
        axis    distance;
        start   ( 10.001 -1 0.01 );
        end     ( 10.001 1 0.01 );
        nPoints 100;
    }
);

surfaces        ();

fields          ( Ux );


