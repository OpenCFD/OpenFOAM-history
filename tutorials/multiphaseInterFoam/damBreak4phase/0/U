FoamFile
{
    version 2.0;
    format ascii;

    root "";
    case "";
    instance ""0"";
    local "";

    class volVectorField;
    object U;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftWall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    rightWall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    lowerWall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    atmosphere
    {
        type            fluxCorrectedVelocity;
        phi             phi;
        rho             rho;
        value           uniform (0 0 0);
    }
    defaultFaces
    {
        type            empty;
    }
}


