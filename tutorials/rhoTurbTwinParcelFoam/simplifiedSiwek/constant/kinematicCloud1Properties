    thetaInnerCoeffs
    {
        value                            0.0;
    }
    thetaOuter                           Constant;
    thetaOuterCoeffs
    {
        value                            30.0;
    }
    parcelPDF
    {
        pdfType                          RosinRammler;
        RosinRammlerPDF
        {
            minValue                     50.0e-06;
            maxValue                     100.0e-06;
            d                            (75.0e-06);
            n                            (0.5);
        }
    }
}

StandardWallInteractionCoeffs
{
    e      e        [ 0  0  0  0  0]     1;
