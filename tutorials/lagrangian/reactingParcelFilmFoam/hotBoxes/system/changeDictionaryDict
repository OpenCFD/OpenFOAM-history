FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      changeDictionaryDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dictionaryReplacement
{
    T
    {
        boundaryField
        {
            wallFilm
            {
                type            directMappedNamedFixedValue;
                fieldName       Tsf;
                average         300;
                setAverage      no;
                value           uniform 300;
            }
        }
    }

    U
    {
        boundaryField
        {
            wallFilm
            {
                type            directMappedNamedFixedValue;
                fieldName       Usf;
                average         (0 0 0);
                setAverage      no;
                value           uniform (0 0 0);
            }
        }
    }
}

