{
    rhoMin          1e-15;
    TMin            200;
    pMin            1000;
    rho0            1000;
    minParticleMass 1e-15;
    T0              300;
    cp0             4187;
    epsilon0        1;
    f0              0.5;
    Pr              0.7;
    Tvap            273;
    Tbp             373;
    constantVolume  false;
    youngsModulus   0;
    poissonsRatio   0;
}

interpolationSchemes
{
    rho             cell;
    U               cell; // cellPoint;
    mu              cell;
    T               cell;
    Cp              cell;
    p               cell;
}

