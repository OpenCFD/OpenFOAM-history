    {
        type            zeroGradient;
    }

    region0_to_wallFilmRegion_wallFilmFaces
    {
        type            directMappedFixedInternalValue;
        average         100000;
        setAverage      no;
        value           uniform 100000;
    }

    left
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            zeroGradient;
    }
