FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      enthalpySourceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

active          yes;

cellSource      sphereToCell;

volumeType      absolute;

timeStart       0.15;

duration        0.1;

onValue         10000;

offValue        0;

sphereToCellCoeffs
{
    centre          ( 0.125 0.375 0.05 );
    radius          0.005;
}


