FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// ************************************************************************* //

dimensions          [ 1 -1 -2 0 0 0 0 ];

internalField       uniform 5e+06;

boundaryField
{
    walls
    {
        type            buoyantPressure;
        value           uniform 5e+06;
    }

    front
    {
        type            wedge;
    }

    back
    {
        type            wedge;
    }
}

