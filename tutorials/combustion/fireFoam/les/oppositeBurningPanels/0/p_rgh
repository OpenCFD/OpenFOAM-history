FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 101325;

boundaryField
{
    ground
    {
        type            buoyantPressure;
        value           $internalField;
    }

    top
    {
        type            zeroGradient;
        value           $internalField;
    }

    burner
    {
        type            buoyantPressure;
        value           $internalField;
    }

    sides
    {
        type            totalPressure;
        U               U;
        phi             phi;
        rho             rho;
        psi             none;
        gamma           1.4;
        p0              $internalField;
        value           $internalField;
    }

    "(region0_to.*)"
    {
        type            buoyantPressure;
        value           $internalField;
    }
}


// ************************************************************************* //
