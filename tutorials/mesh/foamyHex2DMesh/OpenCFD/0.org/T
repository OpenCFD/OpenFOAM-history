FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    box_inlet
    {
        type            fixedValue;
        value           uniform 1;
    }

    box_outlet
    {
        type            zeroGradient;
    }

    box_bottom
    {
        type            zeroGradient;
    }

    box_top
    {
        type            zeroGradient;
    }

    letters_text
    {
        type            zeroGradient;
    }
}

