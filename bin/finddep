# Script
#     finddep
#
# Description
#     find all .dep files referring to any of <file1> ... <fileN>
#
#------------------------------------------------------------------------------
usage() {
    exec 1>&2
    while [ "$#" -ge 1 ]; do echo "$1"; shift; done
    cat<<USAGE
Usage: ${0##*/} <file1> ... <fileN>

* find all .dep files referring to any of <file1> ... <fileN>

USAGE
    exit 1
}


# parse options
while [ "$#" -gt 0 ]
do
    case "$1" in
    -h | -help)
        usage
        ;;
    -*)
        usage "unknown option: '$*'"
        ;;
    *)
        break
        ;;
    esac
done

[ "$#" -gt 0 ] || usage


find . -name '*.dep' -print | \
    while read src
    do
        for file in $@
        do
            grep -l "$file" $src && break
        done
    done

#------------------------------------------------------------------------------
