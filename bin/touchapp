# Script
#     touchapp
#
# Description
#     touch FOAM_APPBIN
#------------------------------------------------------------------------------

if [ "$#" -ne 0 ]
then
    echo "Usage: ${0##*/}"
    echo "    touch FOAM_APPBIN"
    exit 1
fi


if [ -d "$FOAM_APPBIN" ]
then
    echo "touching FOAM_APPBIN: $FOAM_APPBIN"
    touch $FOAM_APPBIN/*
else
    echo "no FOAM_APPBIN: $FOAM_APPBIN"
fi
#------------------------------------------------------------------------------
