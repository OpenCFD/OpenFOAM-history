#!/bin/sh

# default is pwd
if [ "$#" -eq 0 ]
then
   set -- .
elif [ "$1" = "-h" -o "$1" = "-help" ]
then
   echo "Usage: ${0##*/} [dir1] .. [dirN]"
   echo "    touch all .dep files"
   exit 1
fi

for i
do
   if [ -d "$i" ]
   then
      echo "touching all .dep files: $i"
      find $i -name '*.dep' -print | xargs -t touch
   else
      echo "no directory: $i"
   fi
done
#------------------------------------------------------------------------------
