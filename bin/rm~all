#!/bin/sh

# default is pwd
if [ "$#" -eq 0 ]
then
   set -- .
elif [ "$1" = "-h" -o "$1" = "-help" ]
then
   echo "Usage: ${0##*/} [dir1] .. [dirN]"
   echo "    remove all *~ files"
   exit 1
fi

for i
do
   if [ -d "$i" ]
   then
      echo "removing all *~ files"
      find $i \( -name '*~' -o -name '.*~' \) -print | xargs -t rm
   else
      echo "no directory: $i"
   fi
done
#------------------------------------------------------------------------------
