# Script
#     org-batch
#
# Description
#     Batch process emacs org-mode files to create html/LaTeX etc.
#
#------------------------------------------------------------------------------
Script=${0##*/}

usage() {
    while [ "$#" -ge 1 ]; do echo "$1"; shift; done
    cat<<USAGE

usage: ${0##*/} [OPTIONS] file1 [.. fileN]
options:
  -html   create html (default)
  -latex  create LaTeX

* Batch process emacs org-mode files to create html/LaTeX etc.

USAGE
    exit 1
}


# default is html export:
mode=html

case $Script in
*latex)
    mode=latex
    ;;
*html)
    mode=html
    ;;
esac


# parse options
while [ "$#" -gt 0 ]
do
    case "$1" in
    -h | -help)
        usage
        ;;
    -html)
        mode=html
        shift
        ;;
    -latex)
        mode=latex
        shift
        ;;
    -*)
        usage "unknown option: '$*'"
        ;;
    *)
        break
        ;;
    esac
done

# default is the current directory
[ "$#" -gt 0 ] || usage "No files specified"

type emacs >/dev/null 2>&1 || usage "No emacs found in PATH"


for org
do
    echo "Processing: $org"
    echo "----------"
    if [ -f "$org" ]
    then
        emacs --batch -l org --visit=$org \
              --funcall org-export-as-$mode-batch
    else
        echo "File not found"
    fi
    echo "----------"
done

#------------------------------------------------------------------------------
