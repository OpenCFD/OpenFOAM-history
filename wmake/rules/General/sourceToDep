.SUFFIXES: .c .cc .cxx .cpp .C .F .f .dep

MKDEP       = $(WMAKE_BIN)/wmkdep -I$(*D) $(LIB_HEADER_DIRS)

$(OBJECTS_DIR)/%.c.dep : %.c
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.cc.dep : %.cc
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.cxx.dep : %.cxx
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.cpp.dep : %.cpp
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.C.dep : %.C
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.F.dep : %.F
	$(MAKE_DEP)

$(OBJECTS_DIR)/%.f.dep : %.f
	$(MAKE_DEP)
