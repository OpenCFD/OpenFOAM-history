# File
#     wmake/scripts/AllwmakeArguments
#
# Description
#     General argument handling script for Allwmake scripts
#
# Usage
#     # Declare and set targetType to default if library building is supported
#     targetType=libso          # lib, libo or libso
#     # Declare and set genDoc to default if documentation building is supported
#     genDoc=0                  # 0 or 1
#     # Parse arguments
#     . $WM_PROJECT_DIR/wmake/scripts/AllwmakeArguments
#
#------------------------------------------------------------------------------

script=${0##*/}

usage() {
    exec 1>&2
    while [ "$#" -ge 1 ]; do echo "$1"; shift; done

    # Show normal usage options
    cat<<USAGE

Usage: $script [OPTIONS]

options:
  -h or -help       Display list of Allwmake options
  -hd or -help-dev  Display list of AllwmakeArguments options
  -k or -non-stop   Build without stopping when errors occur
  -j                Build on all local cores/hyperthreads
  -jN or -j N       Build on N cores/hyperthreads
  -no-scheduler     Build without wmakeScheduler
USAGE

    # Show options for building code documentation
    test -n "$genDoc" && cat<<USAGE_DOC
  doc               Build code documentation (requires Doxygen to be installed)
USAGE_DOC

    # Show options for building libraries
    test -n "$targetType" && cat<<USAGE_LIB
  lib               Build statically linked archive lib (.a)
  libo              Build statically linked lib (.o)
  libso             Build dynamically linked lib (.so)
  dep               Build dependency files
USAGE_LIB

    exit 1
}

# Set WM_NCOMPPROCS to local number of cores
getNCOMPPROCS()
{
    if [ -r /proc/cpuinfo ]
    then
        WM_NCOMPPROCS=$(egrep "^processor" /proc/cpuinfo | wc -l)
        [ $WM_NCOMPPROCS -le 8 ] || WM_NCOMPPROCS=8
    else
        WM_NCOMPPROCS=1
    fi

    export WM_NCOMPPROCS
}

# Parse options
while [ "$#" -gt 0 ]
do
    case "$1" in
        -h | -help)
            usage
            ;;
        -j)
            getNCOMPPROCS
            test $# -ge 2 && expr $2 + 1 > /dev/null 2>&1 \
                && shift && export WM_NCOMPPROCS=$1
            echo "Building enabled on $WM_NCOMPPROCS cores"
            ;;
        -j*)
            export WM_NCOMPPROCS=${1#-j}
            echo "Building enabled on $WM_NCOMPPROCS cores"
            ;;
        -k | -non-stop)
            export WM_CONTINUE_ON_ERROR=1
            ;;
        -no-scheduler)
            unset WM_SCHEDULER
            ;;
        doc)
            test -n "$genDoc" || usage "invalid option '$1'"
            genDoc=1
            ;;
        # wmake target type
        lib | libo | libso | dep)
            test -n "$targetType" || usage "invalid option '$1'"
            targetType=$1
            ;;
        --)
            shift
            break
            ;;
        -* | *)
            usage "invalid option '$1'"
            ;;
    esac
    shift
done

# Cleanup local variables
unset usage getNCOMPPROCS

