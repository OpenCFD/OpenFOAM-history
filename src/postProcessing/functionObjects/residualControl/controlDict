FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    convergenceChecks
    {
        type            residualControl;
        functionObjectLibs ( "libresidualControl.so" );
        outputControl   timeStep;
        outputInterval  1;

        maxResiduals
        {
            p       5e-4;
            U       1e-3;

            // possibly check turbulence fields
            "(k|epsilon|omega)" 1e-3;
        }
    }
}

// ************************************************************************* //
