# Set LAM/MPI at the end of the path
# Part of the OSCAR install
#

if ($?LAMMPI == "0") then
  set path = ($path @LAM_BINDIR@)
  if ($?MANPATH == "0") then
    set MANPATH="/usr/share/man:@LAM_MANDIR@"
  else
    set MANPATH="${MANPATH}:@LAM_MANDIR@"
  endif
endif
