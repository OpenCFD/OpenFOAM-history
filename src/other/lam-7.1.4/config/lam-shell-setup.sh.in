#
# Set LAM/MPI at the end of the path
# Part of the OSCAR install
#

if [ "$LAMMPI" = "" ] ; then
  export PATH="${PATH}:@LAM_BINDIR@"
  if [ -z $MANPATH ]; then
    export MANPATH="/usr/share/man:@LAM_MANDIR@"
  else
    export MANPATH="${MANPATH}:@LAM_MANDIR@"
  fi
fi
