#! /bin/sh -f

args=''
incdirs=''

for arg in ` echo "$CPLUS_INCLUDE_PATH" | tr : ' ' `
do
  incdirs="$incdirs '-I$arg'"
done

for arg
do
  case "$arg" in
  -I*)
    incdirs="$incdirs '$arg'"
    ;;
  *)
    args="$args '$arg'"
    ;;
  esac
done

eval "@CXX@ $incdirs @CPPFLAGS@ @CXXFLAGS@ @EHFLAGS@ -DPIC @PICFLAGS@ $args"
exit $?
